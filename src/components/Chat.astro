<div id="chat" class="fixed bottom-4 right-4">
    <div
        id="chat-ball"
        class="bg-strong-blue text-white rounded-full w-12 h-12 flex items-center justify-center shadow-lg cursor-pointer"
    >
        <i class="fas fa-comments"></i>
    </div>
    <div
        id="chat-window"
        class="hidden bg-white border rounded-lg shadow-lg p-4 w-80 max-h-96 overflow-y-auto"
    >
        <div class="flex justify-between items-center mb-2">
            <h2 class="text-lg font-bold">Chat</h2>
            <button id="close-chat" class="text-gray-500">&times;</button>
        </div>
        <div id="chat-content" class="flex flex-col space-y-2 mb-4">
            <!-- Example Messages -->
            <div class="self-start bg-gray-200 text-gray-900 p-2 rounded-lg">
                ¡Hola! ¿En qué puedo ayudarte?
            </div>
            <div class="self-end bg-strong-blue text-white p-2 rounded-lg">
                Necesito información sobre los servicios que ofrecen.
            </div>
        </div>
        <div class="flex space-x-2">
            <input
                id="chat-input"
                type="text"
                placeholder="Escribe un mensaje..."
                class="flex-1 border rounded p-2"
            />
            <button
                id="send-message"
                class="bg-strong-blue text-white py-2 px-4 rounded">Enviar</button
            >
        </div>
    </div>
</div>

<script>
    document.addEventListener("DOMContentLoaded", function () {
        const chatBall = document.getElementById("chat-ball")!;
        const chatWindow = document.getElementById("chat-window")!;
        const closeChat = document.getElementById("close-chat")!;

        chatBall.addEventListener("click", function () {
            chatBall.classList.add("hidden");
            chatWindow.classList.remove("hidden");
        });

        closeChat.addEventListener("click", function () {
            chatWindow.classList.add("hidden");
            chatBall.classList.remove("hidden");
        });
    });
</script>
